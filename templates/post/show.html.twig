{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1>{{ post.title }}</h1>
        </div>
        <div class="card-body">
            <p><strong>Catégorie :</strong> {{ post.category.name }}</p>
            <p><strong>Slug :</strong> {{ post.slug }}</p>
            <p><strong>Contenu :</strong> {{ post.content }}</p>
            <p><strong>Date de création :</strong> {{ post.createdAt|date('d/m/Y à H:i') }}</p>
            {% if post.updatedAt %}
                <p><strong>Dernière modification :</strong> {{ post.updatedAt|date('d/m/Y à H:i') }}</p>
            {% endif %}
            
            <hr>
        </div>
        <div class="card-footer">
            <a href="{{ path('app_post_list') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_post_edit', {id: post.id}) }}" class="btn btn-warning">Éditer</a>
        </div>
    </div>
</div>
{% endblock %}
