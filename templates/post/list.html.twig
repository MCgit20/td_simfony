{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Liste des posts</h1>
    
    <a href="{{ path('app_post_new') }}" class="btn btn-primary mb-3">Créer un nouveau post</a>

    {% if posts is empty %}
        <div class="alert alert-info">
            Aucun post pour le moment.
        </div>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Slug</th>
                    <th>Contenu</th>
                    <th>Date de création</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.category.name }}</td>
                        <td>{{ post.slug }}</td>
                        <td>{{ post.content|length > 50 ? post.content|slice(0, 50) ~ '...' : post.content }}</td>
                        <td>{{ post.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('app_post_show', {id: post.id}) }}" class="btn btn-sm btn-info">Voir</a>
                            <a href="{{ path('app_post_edit', {id: post.id}) }}" class="btn btn-sm btn-warning">Éditer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
